{
  "info": {
    "name": "DiscoverBF API (Local)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "f1b2f3e4-0000-4444-8888-aaaaaaaaaaaa"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register (public)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{base_url}}/api/register", "host": ["{{base_url}}"], "path": ["api","register"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password\",\n  \"password_confirmation\": \"password\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Login (public)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{base_url}}/api/login", "host": ["{{base_url}}"], "path": ["api","login"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password\"\n}"
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Restaurants (public)",
      "item": [
        {
          "name": "List restaurants",
          "request": {
            "method": "GET",
            "url": { "raw": "{{base_url}}/api/restaurants", "host": ["{{base_url}}"], "path": ["api","restaurants"] }
          },
          "response": []
        },
        {
          "name": "Show restaurant",
          "request": {
            "method": "GET",
            "url": { "raw": "{{base_url}}/api/restaurants/{{restaurant_id}}", "host": ["{{base_url}}"], "path": ["api","restaurants","{{restaurant_id}}"] }
          },
          "response": []
        },
        {
          "name": "List dishes (by restaurant)",
          "request": {
            "method": "GET",
            "url": { "raw": "{{base_url}}/api/restaurants/{{restaurant_id}}/dishes", "host": ["{{base_url}}"], "path": ["api","restaurants","{{restaurant_id}}","dishes"] }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Restaurants (protected)",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "// Ensure Authorization header is set via collection variable token",
              "if (pm.collectionVariables.get('token')) {",
              "  pm.request.headers.add({ key: 'Authorization', value: 'Bearer ' + pm.collectionVariables.get('token') });",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "item": [
        {
          "name": "Create reservation",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{base_url}}/api/restaurants/{{restaurant_id}}/reserve", "host": ["{{base_url}}"], "path": ["api","restaurants","{{restaurant_id}}","reserve"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reservation_at\": \"2025-10-01T19:30:00Z\",\n  \"party_size\": 4,\n  \"special_requests\": \"Table près de la fenêtre\",\n  \"items\": [\n    { \"dish_id\": 12, \"qty\": 2 },\n    { \"dish_id\": 18, \"qty\": 1 }\n  ]\n}"
            }
          },
          "response": []
        },
        {
          "name": "My reservations (list)",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": { "raw": "{{base_url}}/api/restaurant-reservations", "host": ["{{base_url}}"], "path": ["api","restaurant-reservations"] }
          },
          "response": []
        },
        {
          "name": "Show reservation",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": { "raw": "{{base_url}}/api/restaurant-reservations/{{reservation_id}}", "host": ["{{base_url}}"], "path": ["api","restaurant-reservations","{{reservation_id}}"] }
          },
          "response": []
        }
      ]
    },
    {
